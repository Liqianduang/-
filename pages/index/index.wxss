.information {
  height: 430rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 150rpx 0 60rpx 0;
  box-sizing: border-box;
  background-size: 100%;
  background-repeat: no-repeat;
  background-image: url("https://i.loli.net/2021/11/02/WQyMdF6SqD5e4BC.png");
} 

.userinfo {
  margin: 0rpx 0rpx 0rpx 50rpx;
  flex-direction: row;
  color: rgb(255, 255, 255);
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  border-radius: 60%;
  border: 1px solid #ddd;
}

.userinfo-text{
  display: flex;
  flex-direction: column;
}

.userinfo-nick{
  margin: 0rpx 0rpx 0rpx 20rpx;
  font-size: 30rpx;
}

.userinfo-sign{
